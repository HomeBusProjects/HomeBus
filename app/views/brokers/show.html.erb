<p>
  <strong>Name:</strong>
  <%= @broker.name %>
</p>

<p>
  <strong>Insecure Port</strong>
</p>
<p>
  <%= @broker.insecure_port %>
</p>

<p>
  <strong>Secure Port</strong>
</p>
<p>
  <%= @broker.secure_port %>
</p>

<p>
  <strong>Networks (<%= @broker.networks_count %>):</strong>
  <ul>
    <% @broker.networks.each do |network| %>
      <li><%= link_to network.name, network %></li>
    <% end %>
  </ul>
</p>

<p>
  <strong>Devices:</strong>
  <%= @broker.devices_count %>
</p>

<%= link_to 'Edit', edit_broker_path(@broker), class: 'btn btn-info'  %>
