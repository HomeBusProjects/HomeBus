<h1>Devices</h1>

<table class='table'>
  <thead>
    <tr>
      <th>UUID</th>
      <th>Provisioned</th>
      <th>Friendly name</th>
      <th>Friendly Location</th>
      <th>Accuracy</th>
      <th>Precision</th>
      <th>Calibrated?</th>
      <th>Update frequency</th>
      <th>Provision request</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @devices.each do |device| %>
      <tr>
	<td><%= device.id %></td>
        <td><%= device.provisioned ? 'Y' : 'n'  %></td>
        <td><%= device.friendly_name %></td>
        <td><%= device.friendly_location %></td>
        <td><%= device.accuracy %></td>
        <td><%= device.precision %></td>
	<td><%= device.calibrated? %></td>
        <td><%= device.update_frequency %></td>
        <td><%= link_to device.provision_request.friendly_name, device.provision_request %></td>
        <td><%= link_to 'Show', device %></td>
        <td><%= link_to 'Edit', edit_device_path(device) %></td>
        <td><%= link_to 'Destroy', device, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Device', new_device_path %>
