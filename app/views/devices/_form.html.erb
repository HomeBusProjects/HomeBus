<%= form_with(model: device, local: true) do |form| %>
  <% if device.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(device.errors.count, "error") %> prohibited this device from being saved:</h2>

      <ul>
      <% device.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field form-group">
    <%= form.label :id, 'UUID' %>
    <%= form.text_field :id,  { class: 'form-control', readonly: true } %>
  </div>

  <div class="row">
    <div class="col">
      <%= form.label :friendly_name, "Name" %>
      <%= form.text_field :friendly_name, { class: "form-control" } %>
    </div>
 </div>

   <div class="row">
    <div class="col">
      <h2>Publish</h2>
      <table class='table'>
	<% @device.ddcs.order(name: :asc).each do |ddc| %>
          <% perms = @device.ddcs_devices.find_by(ddc: ddc) %>
	<tr>
	  <td><%= check_box_tag "wo_ddcs[]", ddc.id, perms.enabled?, class: 'form-control' %></td>
	  <td><%= link_to ddc.name, ddc %></td>
	</tr>
	<% end %>
      </table>
    </div>

    <div class="col">
      <h2>Consume</h2>
      <table class='table'>
	<% @device.ddcs.order(name: :asc).each do |ddc| %>
          <% perms = @device.ddcs_devices.find_by(ddc: ddc) %>
	<tr>
	  <td><%= check_box_tag "ro_ddcs[]", perms.id, perms.enabled?, class: 'form-control' %></td>
	  <td><%= link_to ddc.name, ddc %></td>
	</tr>
	<% end %>
      </table>
    </div>
  </div>

  <div class="field form-group">
    <%= form.label :provision_request_id %>
    <%= form.collection_select :provision_request_id, ProvisionRequest.all, :id, :friendly_name, {}, { class: 'form-control', readonly: true } %>
  </div>

  <div class="actions">
    <%= form.submit "Update Device", class: "btn btn-primary" %>
  </div>
<% end %>
