<%= form_with(model: app_instance) do |form| %>
  <% if app_instance.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(app_instance.errors.count, "error") %> prohibited this app_instance from being saved:</h2>

      <ul>
        <% app_instance.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :app_id %>
    <%= form.collection_select :app_id, @apps, :id, :name, {}, { class: 'form-control', readonly: true } %>
  </div>

  <div class="field">
    <%= form.label :user_id %>
    <%= form.collection_select :user_id, @users, :id, :name, {}, { class: 'form-control', readonly: true } %>
  </div>

  <div class="field">
    <%= form.label :parameters %>
    <%= form.text_field :parameters, class: 'form-control' %>
  </div>

  <div class="field">
    <%= form.label :public_key %>
    <%= form.text_field :public_key, class: 'form-control' %>
  </div>

  <div class="field">
    <%= form.label :interval %>
    <%= form.text_field :interval, class: 'form-control' %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
