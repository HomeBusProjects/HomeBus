<h1>Users</h1>

<table class='table'>
  <thead>
    <tr>
      <th>Email</th>
      <th>Name</th>
      <th>Devices</th>
      <th>Networks</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= link_to user.email, user %></td>
        <td><%= user.name %></td>
	<td><%= user.devices.count %></td>
	<td><%= user.networks.count %></td>
        <td><%= link_to 'Delete', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New User', new_user_path, class: 'btn btn-info' %>
