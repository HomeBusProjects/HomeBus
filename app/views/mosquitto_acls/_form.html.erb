<%= form_with(model: mosquitto_acl, local: true) do |form| %>
  <% if mosquitto_acl.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(mosquitto_acl.errors.count, "error") %> prohibited this mosquitto_acl from being saved:</h2>

      <ul>
      <% mosquitto_acl.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :username %>
    <%= form.text_field :username, { class: 'form-control', readonly: true } %>
